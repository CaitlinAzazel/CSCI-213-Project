@page
@model AnniesCatSanctuary.Pages.SendMessageModel

<h1>Send a Message</h1>

<form method="post">
    <div class="mb-3">
        <label for="Sender" class="form-label">Sender</label>
        <input type="text" id="Sender" name="NewMessage.Sender" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Recipient" class="form-label">Recipient</label>
        <input type="text" id="Recipient" name="NewMessage.Recipient" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Subject" class="form-label">Subject</label>
        <input type="text" id="Subject" name="NewMessage.Subject" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Content" class="form-label">Message</label>
        <textarea id="Content" name="NewMessage.Content" class="form-control" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>
