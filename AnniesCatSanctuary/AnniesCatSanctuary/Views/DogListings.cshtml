<!-- DogListings.cshtml -->
@model IEnumerable<AnniesCatSancuary.Controllers.Dog>

    @{
    ViewData["Title"] = "Dog Listings";
    }

    <h1>Dog Listings</h1>
    <p>Browse available dogs for adoption.</p>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Breed</th>
                <th>Age</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dog in Model)
        {
            <tr>
                <td>@dog.Name</td>
                <td>@dog.Breed</td>
                <td>@dog.Age</td>
                <td>@dog.Description</td>
            </tr>
        }
        </tbody>
    </table>

